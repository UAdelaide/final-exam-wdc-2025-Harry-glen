<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BAD dog walk service</title>
    <style>
    body {
      background-color: #474747;      /* dark grey */
      color: #000000;                     /* black text */
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 1em;
    }
    button {
      background: #555;
      color: #fff;
      border: none;
      padding: 0.5em 1em;
      cursor: pointer;
    }
    button:hover {
      background: #666;
    }
  </style>
</head>
<body>
    <div id="app">
        <h2>{{ message }}</h2>
        <button @click="fetchDog">button</button>
        <div v-if="dogImageUrl" style="margin-top: 1em;">
            <img :src="dogImageUrl" style="max-width: 300%; height: auto;" />
        </div>
    </div>

    <script src="https://unpkg.com/vue@3/dist/vue.global.prod.js"></script>
    <script>
        const { createApp } = Vue;

        createApp({
            data(){
                return {
                    message: 'Welcome to Dog walk service',
                    dogImageUrl: ''
                }
            },
            methods: {
                async fetchDog(){
                    try {
                        const res = await fetch('https://dog.ceo/api/breeds/image/random');
                        const data = await res.json();
                        this.dogImageUrl = data.message;
                    } catch (e){
                        console.error('Error fetching dog:', e)
                    }
                }
            },
            mounted(){
                this.fetchDog();
            }
        }).mount('#app');
    </script>
</body>
</html>